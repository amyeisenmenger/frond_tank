<% if @user.errors.any? %>
  <h5>Errors:</h5>
  <p><%= @user.errors.full_messages.join(', ') %></p>
<% end %>

<%= form_for @user do |f| %> 
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>
<% end %>